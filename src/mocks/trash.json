{
  "productSubcategory": {
    "title": "Subcategory",
    "type": "string",
    "enum": ["toast", "salad", "snecks"]
  },
  "breakfast": {
    "type": "string",
    "enum": ["eggs", "toast with butter", "salad"]
  },
  "dinner": {
    "type": "string",
    "enum": ["borsch", "porridge with cutlet", "salad"]
  },
  "drinks": {
    "type": "string",
    "enum": ["coffee", "tea", "juice"]
  },
  "toasts": {
    "type": "string",
    "enum": ["with butter", "with jam"]
  },
  "salad": {
    "type": "string",
    "enum": ["with tomatos", "with broccoli", "with salmon"]
  },
  "snecks": {
    "type": "string",
    "enum": ["nuts", "chips", "cookies"]
  },

  "anyOf": [
    {
      "if": {
        "properties": {
          "productCategory": {
            "enum": ["Breakfast"]
          }
        }
      },
      "then": {
        "properties": {
          "meals": {
            "type": "string",
            "enum": ["eggs", "toast with butter", "salad"]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "productCategory": {
            "enum": ["Dinner"]
          }
        }
      },
      "then": {
        "properties": {
          "meals": {
            "type": "string",
            "enum": ["borsch", "porridge with cutlet", "salad"]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "productCategory": {
            "enum": ["Lanch"]
          }
        }
      },
      "then": {
        "properties": {
          "productSubcategory": {
            "enum": ["toast", "salad", "snecks"]
          },
          "meals": {
            "type": "string"
          }
        }
      }
    }
  ]
}
