{
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "price": {
      "type": "string",
      "title": "Price",
      "format": "price",
      "customRender": "numeric",
      "deximal": true
    },
    "year": {
      "type": "string",
      "title": "Year",
      "format": "year",
      "customRender": "numeric",
      "stringlength": 4
    },
    "description": {
      "title": "Long Description",
      "type": "string"
    },
    "done": {
      "type": "boolean"
    },
    "due_date": {
      "type": "string",
      "format": "date"
    },
    "rating": {
      "type": "integer",
      "maximum": 5
    },
    "recurrence": {
      "type": "string",
      "enum": ["Never", "Daily", "Weekly", "Monthly"]
    },
    "recurrence_interval": {
      "type": "integer"
    },
    "productCategory": {
      "title": "Category",
      "type": "string",
      "enum": ["Breakfast", "Dinner", "Lanch"]
    },
    "productSubcategory": {
      "title": "Subcategory",
      "type": "string",
      "enum": ["toast", "salad", "snecks"]
    },
    "breakfast": {
      "type": "string",
      "enum": ["eggs", "toast with butter", "salad"]
    },
    "dinner": {
      "type": "string",
      "enum": ["borsch", "porridge with cutlet", "salad"]
    },
    "drinks": {
      "type": "string",
      "enum": ["coffee", "tea", "juice"]
    },
    "toasts": {
      "type": "string",
      "enum": ["with butter", "with jam"]
    },
    "salad": {
      "type": "string",
      "enum": ["with tomatos", "with broccoli", "with salmon"]
    },
    "snecks": {
      "type": "string",
      "enum": ["nuts", "chips", "cookies"]
    }
  },

  "required": [
    "name",
    "price",
    "productSubcategory",
    "toasts",
    "salad",
    "snecks",
    "breakfast",
    "dinner",
    "productCategory"
  ]
}
