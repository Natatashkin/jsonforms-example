{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "label": "Completed",
      "scope": "#/properties/done"
    },
    {
      "type": "Control",
      "scope": "#/properties/name"
    },
    {
      "type": "Control",
      "scope": "#/properties/price"
    },
    {
      "type": "Control",
      "scope": "#/properties/year"
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/due_date"
        },
        {
          "type": "Control",
          "scope": "#/properties/rating"
        }
      ]
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/recurrence"
        },
        {
          "type": "Control",
          "scope": "#/properties/recurrence_interval",
          "rule": {
            "effect": "HIDE",
            "condition": {
              "type": "LEAF",
              "scope": "#/properties/recurrence",
              "expectedValue": "Never"
            }
          }
        }
      ]
    },
    {
      "type": "VerticalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/productCategory"
        },
        {
          "type": "Control",
          "scope": "#/properties/productSubcategory",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/productCategory",
              "schema": { "const": "Lanch" }
            }
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/breakfast",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/productCategory",
              "schema": { "const": "Breakfast" }
            }
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/dinner",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/productCategory",
              "schema": { "const": "Dinner" }
            }
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/toasts",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#",
              "schema": {
                "properties": {
                  "productSubcategory": { "const": "toast" },
                  "productCategory": { "const": "Lanch" }
                },
                "required": ["productCategory", "productSubcategory"]
              }
            }
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/salad",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#",
              "schema": {
                "properties": {
                  "productSubcategory": { "const": "salad" },
                  "productCategory": { "const": "Lanch" }
                },
                "required": ["productCategory", "productSubcategory"]
              }
            }
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/snecks",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#",
              "schema": {
                "properties": {
                  "productSubcategory": { "const": "snecks" },
                  "productCategory": { "const": "Lanch" }
                },
                "required": ["productCategory", "productSubcategory"]
              }
            }
          }
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/description",
      "options": {
        "multi": true
      }
    }
  ]
}
