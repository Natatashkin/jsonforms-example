{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "label": "Completed",
      "scope": "#/properties/done"
    },
    {
      "type": "Control",
      "scope": "#/properties/name"
    },
    {
      "type": "Control",
      "scope": "#/properties/price"
    },
    {
      "type": "Control",
      "scope": "#/properties/year"
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/due_date"
        },
        {
          "type": "Control",
          "scope": "#/properties/rating"
        }
      ]
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/recurrence"
        },
        {
          "type": "Control",
          "scope": "#/properties/recurrence_interval",
          "rule": {
            "effect": "HIDE",
            "condition": {
              "type": "LEAF",
              "scope": "#/properties/recurrence",
              "expectedValue": "Never"
            }
          }
        }
      ]
    },
    {
      "type": "VerticalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/productCategory"
        },
        {
          "type": "Control",
          "scope": "#/properties/categories/anyOf/0/then/properties/meals",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/productCategory",
              "schema": { "const": "Breakfast" }
            }
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/categories/anyOf/1/then/properties/meals",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/productCategory",
              "schema": { "const": "Dinner" }
            }
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/productSubcategory",
          "rule": {
            "effect": "HIDE",
            "condition": {
              "scope": "#/properties/productCategory",
              "schema": { "not": { "const": "Lanch" } }
            }
          }
        },
        {
          "type": "Control",
          "scope": "#/anyOf/0/then/properties/meals",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/productSubcategory",
              "schema": { "const": "toast" }
            }
          }
        },
        {
          "type": "Control",
          "scope": "#/anyOf/1/then/properties/meals",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/productSubcategory",
              "schema": { "const": "salad" }
            }
          }
        },
        {
          "type": "Control",
          "scope": "#/anyOf/2/then/properties/meals",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/productSubcategory",
              "schema": { "const": "snecks" }
            }
          }
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/description",
      "options": {
        "multi": true
      }
    }
  ]
}
