{
  "type": "Categorization",
  "elements": [
    {
      "type": "Category",
      "label": "First",
      "elements": [
        {
          "type": "Control",
          "label": "Completed",
          "scope": "#/properties/done"
        },
        {
          "type": "Control",
          "scope": "#/properties/name"
        }
      ]
    },
    {
      "type": "Category",
      "label": "Second",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/price"
        },
        {
          "type": "Control",
          "scope": "#/properties/year"
        }
      ]
    },
    {
      "type": "Category",
      "label": "Third",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/price"
        },
        {
          "type": "Control",
          "scope": "#/properties/year"
        }
      ],
      "rule": {
        "effect": "SHOW",
        "condition": {
          "scope": "#/properties/done",
          "schema": { "const": true }
        }
      }
    },
    {
      "type": "Category",
      "label": "Completed",
      "elements": [
        {
          "type": "VerticalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/description",
              "options": {
                "multi": true
              }
            }
          ]
        },
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/recurrence"
            },
            {
              "type": "Control",
              "scope": "#/properties/recurrence_interval",
              "rule": {
                "effect": "HIDE",
                "condition": {
                  "type": "LEAF",
                  "scope": "#/properties/recurrence",
                  "expectedValue": "Never"
                }
              }
            }
          ]
        }
      ]
    }
  ],
  "options": {
    "variant": "stepper",
    "showNavButtons": true
  }
}
